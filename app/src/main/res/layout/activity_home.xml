<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fadi.supermarket.activity.HomeActivity">


    <LinearLayout
        android:id="@+id/homeLinearLayout4"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/catalog"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:background="@drawable/catalog"
            android:text="Catalog" />

        <ImageView
            android:id="@+id/sale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.23"
            android:background="@drawable/sale"
            android:text="Sale" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/homeLinearLayout4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/aboutUs"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:background="@drawable/about_us"
            android:text="About Us" />

        <ImageView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_weight="0.23"
            android:background="@drawable/contacts"

            android:text="Contact Us" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/homeLinearLayout1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/newArr"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:background="@drawable/new_arrivals"

            android:text="New Arrivals" />

        <ImageView
            android:id="@+id/bestOff"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_weight="0.23"
            android:background="@drawable/best_offers"

            android:text="Best Offers" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeLinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/homeLinearLayout2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coupon"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:background="@drawable/coupons"
            android:text="Coupons" />

        <ImageView
            android:id="@+id/brands"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/brands"
            android:text="Brands" />
    </LinearLayout>

</LinearLayout>